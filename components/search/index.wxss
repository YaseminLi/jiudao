.search-header{
  position: fixed;
  z-index: 99;
  background: white;
  height: 100rpx;
  width: 680rpx;
  padding-left:30rpx;
  padding-right:40rpx;
  border-top:1px solid #f5f5f5;
  border-bottom:1px solid #f5f5f5;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  box-shadow:0 0 3px 0 #e3e3e3;
}
.search-box{
  height: 68rpx;
  width: 600rpx;
  background: #f5f5f5;
  border-radius: 50px;
  display: flex;
  justify-content: center;
  align-items: center;
}
.search-box .search-placeholder{
  font-size: 28rpx;
  margin-left: 10rpx;
}
.search-box icon{
  margin-right: 10rpx;
}
.search-box image{
  width: 28rpx;
  height: 28rpx;
}
.search-header .cancel{
  font-size: 28rpx;
  font-weight: 500;
}
.history{
  width: 100%;
  padding: 130rpx 30rpx 30rpx 30rpx;
}
 .title{
display: flex;
font-weight: 800;
}
.title icon{
  margin-right: 26rpx;
  width: 5rpx;
  height: 28rpx;
  background: black;
}
 .title text{
  line-height: 30rpx;
  font-size: 28rpx;
  color: black;
}
.tag-container{
  padding: 15rpx 30rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}
.tag-container .tag-item{
  margin-right: 20rpx;
  margin-bottom: 10rpx;
}
.hot{
  width: 100%;
  padding:30rpx 30rpx 30rpx 30rpx;
}
.searchResult{
  padding: 0 90rpx 0 90rpx;
  padding-top:100rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-between;
}
