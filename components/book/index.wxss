.book-container{
  position: relative;
  width: 240rpx;
  height: 360rpx;
  margin: 30rpx 0;
  box-shadow: 2px 2px 2px #e3e3e3
}
.book-container image{
  width: 100%;
  height: 100%;
 border-radius: 2px;
}
.book-container .description{
  position: absolute;
  bottom:0rpx;
  background: white;
  width: 216rpx;
  padding: 5rpx 10rpx 8rpx 15rpx;
  display: flex;
  flex-direction: column;
  border-bottom-left-radius: 2px;
   border-bottom-right-radius: 2px;
}
.book-container .description .title{
  margin-top: 10rpx;
  color: black;
  font-weight: 500;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}
.book-container .description .author{
  font-weight: 500;
  font-size: 20rpx;
  color: #999999;
  margin-bottom: 10rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}
.book-container .description .foot{
  display: flex;
  justify-content: flex-end;
}
.book-container .description .foot text{
  font-size: 20rpx;
}