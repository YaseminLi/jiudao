page{
  background-color: #f2f2f2;
}
.bg-img{
  width: 100%;
  height: 564rpx;
}
.user{
  width: 100%;
  position: absolute;
  top:250rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.user .avatar{
height: 120rpx;
width: 120rpx;
}
.user .user-name{
  line-height: 50rpx;
  font-size: 34rpx;
  color:black;
  font-weight: 800
}
.user .about{
  width: 100%;
  display: flex;
}
.about-item{
  height: 130rpx;
  box-sizing: border-box;
  flex:1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border-bottom:2rpx solid white
}
.about #show{
  border-bottom-color: black
}
.about-item .like-num{
  font-size: 36rpx;
  line-height: 36rpx;
  font-weight: 500;
  color: black;
}
.like-container {
display: flex;
flex-direction: row;
flex-wrap: wrap;
justify-content: space-evenly;
}
.like-container .title{
  width: 100%;
  margin: 20rpx 0;
  display: flex;
  justify-content: center;
}
.like-container .preview-item{
  margin-bottom: 33rpx;
}