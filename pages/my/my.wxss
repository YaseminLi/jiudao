page{
  background-color: #f2f2f2;
}
.bg-img{
  width: 100%;
  height: 560rpx;
}
.user{
  width: 100%;
  position: absolute;
  top:250rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.user .avatar{
height: 120rpx;
width: 120rpx;
}
.user .user-name{
  font-size: 34rpx;
  color:black;
  font-weight: 800
}
.user .about{
  margin-top:30rpx;
  width: 690rpx;
  height: 100rpx;
  display: flex;
}
.about-item{
  width: 345rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.about-item image{
  height: 33rpx;
  width: 33rpx;
  margin-bottom: 5rpx;
}
.about-item .like-num{
  font-size: 36rpx;
